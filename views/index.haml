!!!
%html
  %head
    
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
    %meta{:content => "", :name => "description"}/
    %meta{:content => "width=device-width", :name => "viewport"}/
    
    %link(rel="stylesheet" type="text/css" href="css/bootstrap.min.css")/
    %link(rel="stylesheet" type="text/css" href="css/bootstrap-responsive.min.css")/
    %link(rel="stylesheet" type="text/css" href="css/app.css")/

    %script{:src => "js/jquery-2.0.1.min.js"}
    %script{:src => "js/knockout-2.2.1.js"}
    %script{:src => "js/bootstrap.min.js"}
    %script{:src => "js/app.js"}
    %script{:src => "js/meters.js"}
    %script{:src => "js/web_socket_channel.js"}

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} Scada Services
          .nav-collapse.collapse
            %ul.nav
              %li
                %a{:href => "#about"} About
    .container
      %ul#main-tabs.nav.nav-tabs
        %li.active
          %a{:href => "#meters", 'data-toggle'=>"tab"} Meters
        %li
          %a{:href => "#reports", 'data-toggle'=>"tab"} Reports
        %li
          %a{:href => "#simulation", 'data-toggle'=>"tab"} Simulation

      .tab-content
        .tab-pane.active{:id=>"meters"}
          .row-fluid{'data-bind'=>"foreach:meters"}
            .span2.well
              %h2
                %small
                  %span{'data-bind' => "text:id"}
                  %a.btn.pull-right{'data-bind' => 'click:refresh'}
                    %i.icon-refresh
              %div{'data-bind' => "foreach:energies"}
                %table.table-striped.table-bordered.table-hover
                  %caption
                    %h2
                      %small{'data-bind' => 'text:direction'} 
                  %tbody{'data-bind' => "foreach:lines"}
                    %tr
                      %th
                        %small{'data-bind' => "text:caption"}
                      %td{'data-bind' => "text:energy"}
        .tab-pane{:id=>"reports"}
          %p reports
        .tab-pane{:id=>"simulation"}
          %p simulation
          
      %footer
      
